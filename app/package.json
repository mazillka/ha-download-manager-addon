{
  "name": "ha-download-manager",
  "version": "1.0.15",
  "type": "module",
  "description": "Home Assistant Download Manager Add-on",
  "main": "backend/server.ts",
  "scripts": {
    "dev": "nodemon --watch backend --exec node --loader ts-node/esm backend/server.ts",
    "start": "node --loader ts-node/esm backend/server.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "webpack --mode production --config webpack.config.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0",
    "sqlite3": "^5.1.7",
    "sweetalert2": "^11.26.17",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.27",
    "@types/sqlite3": "^3.1.11",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.1.11",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
