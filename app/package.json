{
  "name": "ha-download-manager",
  "version": "1.0.16",
  "type": "module",
  "description": "Home Assistant Download Manager Add-on",
  "main": "backend/server.ts",
  "scripts": {
    "dev": "npm run dev:backend && npm run dev:frontend",
    "dev:backend": "nodemon --watch backend --exec node --loader ts-node ./dist/backend/server.js",
    "dev:frontend": "webpack --watch --mode development",
    "build:dev": "npm run build:backend && npm run build:frontend:dev",
    "build:prod": "npm run build:frontend:prod && npm run build:backend",
    "build:backend": "tsc -p ./backend/tsconfig.json",
    "build:frontend:dev": "webpack --mode development",
    "build:frontend:prod": "webpack --mode production"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0",
    "sqlite3": "^5.1.7",
    "sweetalert2": "^11.26.17",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/sqlite3": "^5.1.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "html-webpack-plugin": "^5.6.5",
    "nodemon": "^3.1.11",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
